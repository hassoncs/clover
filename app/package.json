{
  "name": "clover",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start --port 8081",
    "dev": "node scripts/generate-registry.mjs && expo start --port 8081",
    "dev:watch": "node scripts/generate-registry.mjs --watch & expo start --port 8081",
    "generate:registry": "node scripts/generate-registry.mjs",
    "generate:registry:check": "node scripts/generate-registry.mjs --check",
    "generate:registry:watch": "node scripts/generate-registry.mjs --watch",
    "dev:web": "expo start --web --port 8081",
    "ios": "expo run:ios --port 8081",
    "ios:device": "expo run:ios --configuration Release --device --port 8081",
    "android": "expo run:android --port 8081",
    "doctor": "expo doctor",
    "clean:js": "rimraf node_modules .expo .expo-shared dist web-build",
    "clean:ios": "rimraf ios/Pods ios/build ~/Library/Developer/Xcode/DerivedData",
    "clean:android": "rimraf android/.gradle android/build android/app/build",
    "clean": "pnpm run clean:js && pnpm run clean:ios && pnpm run clean:android",
    "pods": "cd ios && pod install",
    "verify:ios": "pnpm run doctor && pnpm run pods && pnpm run ios",
    "verify:android": "pnpm run doctor && pnpm run android",
    "postinstall": "mkdir -p public && cp $(node -p \"require.resolve('canvaskit-wasm/bin/full/canvaskit.wasm', { paths: [require.resolve('@shopify/react-native-skia')] })\") public/canvaskit.wasm && cp node_modules/box2d-wasm/dist/es/Box2D.wasm public/box2d.wasm",
    "deploy": "npx expo export -p web && npx wrangler pages deploy dist/ --project-name=clover",
    "build": "expo export -p web"
  },
  "dependencies": {
    "@clover/shared": "workspace:*",
    "@clover/theme": "workspace:*",
    "@clover/ui": "workspace:*",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@shopify/react-native-skia": "2.4.14",
    "@supabase/supabase-js": "^2.90.1",
    "@trpc/client": "11.8.1",
    "aes-js": "^3.1.2",
    "box2d-wasm": "^7.0.0",
    "expo": "^54.0.1",
    "expo-linking": "^8.0.8",
    "expo-router": "~6.0.0",
    "expo-secure-store": "^15.0.8",
    "expo-web-browser": "^15.0.10",
    "nativewind": "^4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "react-native-box2d": "link:/Users/hassoncs/Workspaces/Personal/react-native-box2d",
    "react-native-css-interop": "0.2.1",
    "react-native-gesture-handler": "^2.30.0",
    "react-native-get-random-values": "^2.0.0",
    "react-native-reanimated": "^4.1.6",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-sortable-list": "^0.0.25",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "^0.7.0"
  },
  "private": true,
  "devDependencies": {
    "@types/aes-js": "^3.1.4",
    "@types/node": "^25.0.9",
    "@types/react": "~19.1.17",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "rimraf": "^6.0.0",
    "tailwindcss": "3.4.17",
    "typescript": "~5.9.3"
  }
}
